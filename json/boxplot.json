{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 450,
    "data": {
      "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_A2/main/data/WH_2019_2020.csv"
    },
    "config": {
        "font": "Helvetica Neue, Arial",
        "axis": {
            "labelFont": "Helvetica Neue, Arial",
            "titleFont": "Helvetica Neue, Arial",
            "labelColor": "black",
            "titleColor": "black",
            "gridColor": "lighter",
            "labelFontSize":12,
            "labelLimit":500,
            "titleFontSize": 14
        },
        "lineBreak": "linebreak",
        "title":{
            "fontSize":20,
            "font": "Helvetica Neue, Arial"
        },
        "style": {
            "guide-title": {
                "font": "Helvetica Neue, Arial",
                "fontSize":14
            },
            "text": {
                "font": "Helvetica Neue, Arial",
                "fontSize": 19,
                "fontStyle": "Italic"
            },
            "legend":{
                "labelFont": "Helvetica Neue, Arial",
                "labelFontSize": 12,
                "titleFontSize": 14
            }
        }
    },
    "params": [
        {
          "name": "Year_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              2019, 
              2020
            ],
            "labels": ["Show All", "2019"],
            "name": "Year Selection:"
          }
        }
    ],
    "layer":[
        {
            "transform": [
                {"filter": "datum.happiness_score > 0"},
                {"filter": "Year_selection == null || datum.year == Year_selection"}
            ],
            "mark": {"type": "boxplot"},
            "encoding": {
                "x": {
                    "field": "happiness_score",
                    "type": "quantitative",
                    "title": "Hapiness Score",
                    "scale": {"zero": false}
                },
                "y": {
                        "field": "continent",
                        "type": "nominal",
                        "title": "Continent"
                },
                "color": {
                    "field": "continent",
                    "type": "nominal",
                    "title": "Continent",
                    "scale": {
                        "domain": [
                            "North America",
                            "South America",
                            "Europe",
                            "Africa",
                            "Asia",
                            "Australia"
                        ],
                        "range": [
                            "#CBA048",
                            "#FF8A70",
                            "#6296BC",
                            "#7DBCA9",
                            "#989685",
                            "#5F5C3B"
                        ]
                    },
                    "legend": null
                },
                "tooltip":[
                    {"field":"country","type":"nominal", "title":"Country"},
                    {"field":"continent","type": "nominal","title":"Continent"},
                    {"field":"happiness_score","type":"quantitative","title":"Happiness score", "format": ".2f"},
                    {"field":"year","type":"quantitative","title":"Year"}
                ]
          }
        },
        {
            "transform": [
                {"filter": "datum.happiness_score > 0"},
                {"filter": "Year_selection == null || datum.year == Year_selection"},
                {
                    "joinaggregate": [
                        {
                            "op": "mean",
                            "field": "happiness_score",
                            "as": "mean_hs"
                        }
                    ]
                },
                { "calculate": "format(datum.mean_hs, ',.2f')", "as": "MEAN_HS"}
            ],
            "mark": "rule",
                "encoding": 
                {
                    "x": {
                        "aggregate": "mean",
                        "field": "happiness_score",
                        "type": "quantitative"
                    },
                    "color": {"value": "#c21807"},
                    "size": {"value": 3},
                    "tooltip":[
                        {
                            "field":"MEAN_HS",
                            "title":"Average Happiness score",
                            "format": ".2f"
                        }
                    ]
                }
        },
        {
            "transform": [
                {"filter": "datum.happiness_score > 0"},
                {"filter": "Year_selection == null || datum.year == Year_selection"},
                {
                    "joinaggregate": [
                        {
                            "op": "mean",
                            "field": "happiness_score",
                            "as": "mean_hs"
                        }
                    ]
                },
                { "calculate": "format(datum.mean_hs, ',.2f')", "as": "MEAN_HS"},
                {
                    "calculate": "'Average Happiness Score = ' + datum.MEAN_HS",
                    "as": "text_annotation"
                }
            ],
            "mark": {
                "type": "text",
                "fontWeight":"bold",
                "dx": 20, "dy": -240
            },
            "encoding": {
                "text": {"field": "text_annotation"},
                "color": {"value": "#c21807"}
            }
        }
    ]
    
  }