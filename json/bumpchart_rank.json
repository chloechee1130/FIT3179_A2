{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 450,
    "data": {
        "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_A2/main/data/Top10_rank.csv"
    },
    "config": {
        "font": "Helvetica Neue, Arial",
        "axis": {
            "labelFont": "Helvetica Neue, Arial",
            "titleFont": "Helvetica Neue, Arial",
            "labelColor": "black",
            "titleColor": "black",
            "gridColor": "lighter",
            "labelFontSize":12,
            "labelLimit":500,
            "titleFontSize": 14
        },
        "lineBreak": "linebreak",
        "title":{
            "fontSize":20,
            "font": "Helvetica Neue, Arial"
        },
        "style": {
            "guide-title": {
                "font": "Helvetica Neue, Arial",
                "fontSize":14
            },
            "text": {
                "font": "Helvetica Neue, Arial",
                "fontSize": 15,
                "fontStyle": "Italic"
            },
            "legend":{
                "labelFont": "Helvetica Neue, Arial",
                "labelFontSize": 12,
                "titleFontSize": 14
            }
        },
        "point": {
            "size": 100
        }
    },
    "params": [
        {
          "name": "Year_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              2019, 
              2020
            ],
            "labels": ["Show All", "2019"],
            "name": "Year Selection: "
          }
        }
    ],
    "layer": [
        {
            "params": [
                {
                    "name": "country_highlight",
                    "select": {"type": "point", "fields": ["country"]},
                    "bind": "legend"
                }
            ],
            "transform": [
                {"filter": "datum.happiness_score > 0"},
                {"filter": "Year_selection == null || datum.year == Year_selection"}
            ],
            "mark":{
                "type": "line",
                "point": true,
                "interpolate": "monotone"
            },
            "encoding": {
                "x": {
                    "field":"field",
                    "type": "nominal",
                    "axis": {"labelAngle": -45},
                    "title": null
                },
                "y":{
                    "field": "field_rank",
                    "type": "nominal",
                    "sort": "x",
                    "title": "Rank of Each Factor",
                    "axis": {
                        "grid": true
                    }
                },
                "color": {
                    "field": "country",
                    "type": "nominal",
                    "title": "Top 10 Country",
                    "scale": {
                        "domain": [
                            "Australia",
                            "Austria",
                            "Canada",
                            "Denmark",
                            "Finland",
                            "Iceland",
                            "Luxembourg",
                            "Netherlands",
                            "New Zealand",
                            "Norway",
                            "Sweden",
                            "Switzerland"
                        ],
                        "range": [
                            "#36B067",
                            "#F19900",
                            "#C75E0C",
                            "#EB6672",
                            "#6296BC",
                            "#dda0dd",
                            "#fab291",
                            "#989685",
                            "#024f3c",
                            "#0020c2",
                            "#E31C79",
                            "#7F00FF"
                        ]
                    }
                    
                },
                "opacity": {
                    "condition": {"param": "country_highlight", "value": 0.8},
                    "value": 0.1
                },
                "tooltip":[
                    {
                        "field": "country", 
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "continent", 
                        "type": "nominal",
                        "title": "Continent"
                    },
                    {
                        "field": "field", 
                        "type": "nominal",
                        "title": "Factor"
                    },
                    {
                        "field": "field_rank",
                        "type": "quantitative",
                        "title": "Factor Rank"
                    },
                    {
                        "field": "field_value",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Factor Value"
                    }
                ]
            }
        }
    ]
}