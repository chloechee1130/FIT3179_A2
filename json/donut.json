{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 450,
    "data": {
        "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_A2/main/data/Top10_rank.csv"
    },
    "config": {
        "font": "Helvetica Neue, Arial",
        "axis": {
            "labelFont": "Helvetica Neue, Arial",
            "titleFont": "Helvetica Neue, Arial",
            "labelColor": "black",
            "titleColor": "black",
            "gridColor": "lighter",
            "labelFontSize":12,
            "labelLimit":500,
            "titleFontSize": 14
        },
        "lineBreak": "linebreak",
        "title":{
            "fontSize":20,
            "font": "Helvetica Neue, Arial"
        },
        "style": {
            "guide-title": {
                "font": "Helvetica Neue, Arial",
                "fontSize":14
            },
            "text": {
                "font": "Helvetica Neue, Arial",
                "fontSize": 15,
                "fontStyle": "Italic"
            },
            "legend":{
                "labelFont": "Helvetica Neue, Arial",
                "labelFontSize": 12,
                "titleFontSize": 14
            }
        }
    },
    "params": [
        {
          "name": "Country_selection",
          "value": "Denmark",
          "bind": {
            "input": "select",
            "options": [
                "Norway",
                "Switzerland",
                "Netherlands",
                "Sweden",
                "Australia",
                "Denmark",
                "Canada",
                "Iceland",
                "Finland",
                "New Zealand"
            ],
            "name": "Top 10 Country Selection: "
          }
        }
    ],
    "transform": [
        {
            "filter": "Country_selection == null || datum.country == Country_selection"
        }
    ],
    "encoding": {
        "theta":{
            "field": "field_rank", 
            "type": "quantitative",
            "stack":true
        },
        "color":{
            "field": "field",
            "type":"nominal",
            "title": "Factor",
            "legend": null
        }
    },
    "layer": [
        {
            "mark": {
                "type": "arc",
                "outerRadius": 160,
                "innerRadius": 100
            },
            "encoding": {
                "tooltip": [
                    {
                        "field": "country", 
                        "type": "nominal",
                        "title": "Country"
                    },
                    {
                        "field": "continent", 
                        "type": "nominal",
                        "title": "Continent"
                    },
                    {
                        "field": "field", 
                        "type": "nominal",
                        "title": "Factor"
                    },
                    {
                        "field": "field_value",
                        "type": "quantitative",
                        "format": ".2f",
                        "title": "Factor Value"
                    }
                ]
            }
        },
        {
            "mark": {"type": "text", "radius": 190},
            "encoding": {"text": {"field": "field", "type": "nominal"}}
        },
        {
            
            "transform": [
                {
                    "calculate": "datum.country + 'linebreak Happiness Rank: ' + datum.rank + 'linebreak Happiness Score: ' + datum.happiness_score",
                    "as": "text_annotation"
                }
            ],
            "mark": {
                "type": "text", 
                "radius": 0,
                "dx": 4,
                "dy": -20
            },
            "encoding": {
                "text": {"field": "text_annotation"},
                "color": {"value": "#000000"}
            }
        }          
    ]
}