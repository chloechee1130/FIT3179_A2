{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 450,
    "data": {
        "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_A2/main/data/WH_2019_2020.csv"
    },
    "config": {
        "font": "Helvetica Neue, Arial",
        "axis": {
            "labelFont": "Helvetica Neue, Arial",
            "titleFont": "Helvetica Neue, Arial",
            "labelColor": "black",
            "titleColor": "black",
            "gridColor": "lighter",
            "labelFontSize":12,
            "labelLimit":500,
            "titleFontSize": 14
        },
        "lineBreak": "linebreak",
        "title":{
            "fontSize":20,
            "font": "Helvetica Neue, Arial"
        },
        "style": {
            "guide-title": {
                "font": "Helvetica Neue, Arial",
                "fontSize":14
            },
            "text": {
                "font": "Helvetica Neue, Arial",
                "fontSize": 19,
                "fontStyle": "Italic"
            },
            "legend":{
                "labelFont": "Helvetica Neue, Arial",
                "labelFontSize": 12,
                "titleFontSize": 14
            }
        }
    },
    "params": [
      {
        "name": "Year_selection",
        "bind": {
            "input": "select",
            "options": [
                null,
                2019, 
                2020
            ],
            "labels": ["Show All", "2019"],
            "name": "Year Selection: "
        }
      }
    ],
    "layer":[
        {
            "transform": [
                {"filter": "datum.happiness_score > 0"},
                {"filter": "datum.generosity > 0"},
                {"filter": "Year_selection == null || datum.year == Year_selection"},
                {
                    "lookup": "country",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/chloechee1130/FIT3179_A2/main/json/ne_110m.json",
                            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                        },
                        "key": "properties.NAME",
                        "fields": ["properties.POP_EST"]
                    }
                }
            ],
            "params": [
                {
                    "name": "continent_highlight",
                    "select": {"type": "point", "fields": ["continent"]},
                    "bind": "legend"
                }
            ],
            "mark": "circle",
            "encoding": {
                "x": {
                    "field": "happiness_score",
                    "type": "quantitative",
                    "title": "Hapiness Score",
                    "axis": {"tickCount": 10},
                    "scale": {"domain": [1, 10]}
                },
                "y": {
                    "field": "generosity",
                    "type": "quantitative",
                    "title": "Generosity",
                    "scale": {"domain": [0, 1]}
                },
                "color": {
                    "field": "continent",
                    "type": "nominal",
                    "title": "Continent",
                    "legend":{
                        "labelFont": "Helvetica Neue, Arial",
                        "titleFont": "Helvetica Neue, Arial"
                    },
                    "scale": {
                        "domain": [
                            "North America",
                            "South America",
                            "Europe",
                            "Africa",
                            "Asia",
                            "Australia"
                        ],
                        "range": [
                            "#CBA048",
                            "#FF8A70",
                            "#6296BC",
                            "#7DBCA9",
                            "#989685",
                            "#5F5C3B"
                        ]
                    }
                },
                "opacity": {
                    "condition": {"param": "continent_highlight", "value": 0.8},
                    "value": 0.1
                },
                "size": {
                    "field": "properties.POP_EST",
                    "type": "quantitative",
                    "legend":{
                        "labelFont": "Helvetica Neue, Arial",
                        "titleFont": "Helvetica Neue, Arial",
                        "format": ".3s"
                    },
                    "title": "Population"
                },
                "tooltip": [
                    {
                        "field": "country", 
                        "type": "nominal", 
                        "title": "Country"
                    },
                    {
                        "field": "continent", 
                        "type": "nominal", 
                        "title": "Continent"
                    },
                    {
                        "field": "happiness_score",
                        "type": "quantitative",
                        "title": "Happiness Score",
                        "format": ".2f"
                    },
                    {
                        "field": "generosity",
                        "type": "quantitative",
                        "title": "Generosity",
                        "format": ".2f"
                    },
                    {
                        "field": "properties.POP_EST", 
                        "type": "quantitative", 
                        "title": "Population"
                    },
                    {
                        "field": "year",
                        "type": "quantitative",
                        "title": "Year"
                    }
                ]
            }
        },
        {
            "transform": [
            {
                "filter": "datum.country == 'Luxembourg'"
            },
            {
                "calculate": "'Myanmar is unhappy but generous with small population'",
                "as": "text_annotation"
            }
            ],
            "mark": {
                "type": "text",
                "fontWeight": "bold",
                "dx": 50,
                "dy": -200
            },
            "encoding": {
                "text": {
                    "field": "text_annotation"
                },
                "color": {
                    "value": "#377eb8"
                }
            }
        },
        {
            "transform": [
                {
                    "filter": {
                    "field": "country",
                    "oneOf": [
                        "Malaysia",
                        "Luxembourg",
                        "Taiwan",
                        "Myanmar",
                        "India"
                    ]
                    }
                },
                {"filter": "Year_selection == null || datum.year == Year_selection"}
            ],
            "mark": {
                "type": "text",
                "dy": 15
            },
            "encoding": {
                "x": {
                    "field": "happiness_score",
                    "type": "quantitative"
                },
                "y": {
                    "field": "generosity",
                    "type": "quantitative"
                },
                "text": {
                    "field": "country",
                    "type": "nominal"
                },
                "color": {
                    "value": "black"
                },
                "opacity": {
                    "condition": {
                    "param": "continent_highlight",
                    "value": 0.8
                    },
                    "value": 0.4
                }
            }
        }
    ]
    
  }